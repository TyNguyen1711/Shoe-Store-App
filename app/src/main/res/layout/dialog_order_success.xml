<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@drawable/dialog_background"
    android:gravity="center">

    <ImageView
        android:id="@+id/successIconIV"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/successMessageTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order successful!"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/successIconIV"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/backToHomeBT"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Back to menu"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/design_default_color_primary"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/successMessageTV"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/viewOrderDetailsBT"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="View order"
        android:backgroundTint="@color/login_activity_text"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/successMessageTV"/>
</androidx.constraintlayout.widget.ConstraintLayout>
