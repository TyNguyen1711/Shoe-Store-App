<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_300"
    tools:context=".activity.SelectCityActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tiltleTV1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CDDCB0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backSearchCityIB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#CDDCB0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/arrow_left"
            app:tint="@color/signup_text_button" />

        <SearchView
            android:id="@+id/searchCitySV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:queryHint="Search District, Ward"
            android:iconifiedByDefault="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/backSearchCityIB"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/useMyLocationSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tiltleTV1"
        android:orientation="horizontal"
        android:background="@drawable/rounded_corner"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/locationIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_address"
            app:tint="@color/red"
            android:paddingStart="80dp"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use My Current Location"
            android:textSize="16dp"
            android:textColor="@color/black"
            android:paddingStart="10dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tiltleTV2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City"
        android:textSize="14dp"
        app:layout_constraintTop_toBottomOf="@+id/useMyLocationSection"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="10dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cityRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tiltleTV2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/white" />
</androidx.constraintlayout.widget.ConstraintLayout>